<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/products_of_brand_card"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="15dp"
    android:elevation="8dp"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:id="@+id/ll_product_of_brand_all_properties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_product_of_brand"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="5dp"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:id="@+id/ll_properties_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_properties_product_of_brand_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_product_title_of_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Product"
                    android:textSize="14sp"
                    android:weightSum="1.5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_properties_product_of_brand_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_product_price_of_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="350.00 EGP"
                    android:textColor="@color/purple"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_add_to_fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:paddingVertical="2.5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/favorite_border_24" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>