<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="15dp"
    app:cardCornerRadius="25dp"
    app:elevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/ll_product_all_properties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deleteImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edit_text"
            android:backgroundTint="@color/white"
            app:srcCompat="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/productImg"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_foreground"/>

        <LinearLayout
            android:id="@+id/ll_properties_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_properties_product_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:text="VANS APPAREL AND ACCESSORIES | CLASSIC SUPER NO SHOW SOCK3 PACK WHITE"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_properties_product_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_product_price_category_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="350.00 EGP"
                    android:textColor="@color/purple"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:weightSum="1.5"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>