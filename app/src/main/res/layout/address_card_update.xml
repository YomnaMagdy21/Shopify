<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_Address_list"
    android:layout_marginTop="22dp"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <LinearLayout
        android:id="@+id/ll_Address_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="16dp">

        <!-- Created At -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_edit_row"
            android:orientation="horizontal"
            android:weightSum="2">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/address_svgrepo_com" />

            <ImageView
                android:id="@+id/imageViewEdit"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/edit_3_svgrepo_com" />

            <ImageButton
                android:id="@+id/deleteeAddress"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/delete_left_svgrepo_com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_county_row"
            android:orientation="horizontal"
            android:weightSum="2"

            >
            <TextView
                android:id="@+id/tv_Biulding_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Building"
                android:textSize="18sp"
                android:textStyle="bold"
                android:weightSum="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/Building_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-05-31"
                android:textSize="18sp"
                android:weightSum="1"
                android:layout_marginStart="50dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"/>

        </LinearLayout>

        <!-- Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_city_row"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <TextView
                android:id="@+id/tv_city_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="City"
                android:textSize="18sp"
                android:textStyle="bold"
                android:weightSum="1" />

            <TextView
                android:id="@+id/tv_cityy_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="200.00 EGP"
                android:textSize="18sp"
                android:weightSum="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_order_created_at_row"
            android:orientation="horizontal"
            android:weightSum="2"

            >
            <TextView
                android:id="@+id/tv_countryy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Country"
                android:textSize="18sp"
                android:textStyle="bold"
                android:weightSum="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"/>

            <TextView
                android:id="@+id/tv_countryy_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-05-31"
                android:textSize="18sp"
                android:weightSum="1"
                android:layout_marginStart="50dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"/>

        </LinearLayout>

        <!-- Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_order_price_row"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <TextView
                android:id="@+id/tv_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="@string/phone"
                android:textSize="18sp"
                android:textStyle="bold"
                android:weightSum="1" />

            <TextView
                android:id="@+id/tv_Phonee_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="200.00 EGP"
                android:textSize="18sp"
                android:weightSum="1" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>