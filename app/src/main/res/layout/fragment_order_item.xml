<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor1"
    tools:context=".BottomNavigationBar.orderItem.view.OrderItemFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="28dp" />

            <ImageView
                android:id="@+id/iv_backRow"
                android:layout_width="46dp"
                android:layout_height="29dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/chevron_back_sharp_svgrepo_com"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_order_item"
                android:layout_width="322dp"
                android:layout_height="69dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="137dp"
                android:text="@string/order_item_title"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/const_order_item_ifo"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_item"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"

                        >

                        <!-- Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/client_name_title"
                            android:text="@string/name"
                            android:layout_marginVertical="5dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <!-- Address -->


                        <!-- Phone Number -->

                        <TextView
                            android:id="@+id/client_name_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="72dp"
                            android:padding="10dp"
                            android:text="Yomna"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/client_name_title"
                            app:layout_constraintStart_toEndOf="@+id/client_name_title"
                            app:layout_constraintTop_toTopOf="@+id/client_name_title"
                            app:layout_constraintVertical_bias="0.555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/client_phone_title"
                            android:text="@string/phone_number"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/client_name_title"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:padding="10dp"/>


                        <!-- Total Price -->

                        <TextView
                            android:id="@+id/client_phone_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="16dp"
                            android:padding="10dp"
                            android:text="012002587123"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/client_phone_title"
                            app:layout_constraintStart_toEndOf="@+id/client_phone_title"
                            app:layout_constraintTop_toTopOf="@+id/client_phone_title"
                            app:layout_constraintVertical_bias="0.555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/client_total_price_title"
                            android:text="@string/total_price"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/client_phone_title"
                            android:padding="10dp"/>


                        <!-- Payment Method -->

                        <TextView
                            android:id="@+id/client_total_price_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="52dp"
                            android:padding="10dp"
                            android:text="1000.00 EGP"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/client_total_price_title"
                            app:layout_constraintStart_toEndOf="@+id/client_total_price_title"
                            app:layout_constraintTop_toTopOf="@+id/client_total_price_title"
                            app:layout_constraintVertical_bias="0.555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/client_payment_method_title"
                            android:text="@string/payment_method"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/client_total_price_title"
                            android:padding="10dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/client_payment_method_value"
                            android:text="1000.00 EGP"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_marginVertical="5dp"
                            app:layout_constraintStart_toEndOf="@+id/client_payment_method_title"
                            app:layout_constraintTop_toTopOf="@+id/client_payment_method_title"
                            app:layout_constraintBottom_toBottomOf="@+id/client_payment_method_title"/>

                        <TextView
                            android:id="@+id/client_address_title"
                            android:layout_width="wrap_content"
                            android:layout_height="67dp"
                            android:layout_marginVertical="5dp"
                            android:padding="10dp"
                            android:text="@string/address"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/client_payment_method_title" />


                        <TextView
                            android:id="@+id/client_address_value"
                            android:layout_width="wrap_content"
                            android:layout_height="67dp"
                            android:layout_marginVertical="5dp"
                            android:padding="10dp"
                            android:text="Alexandria"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/client_address_title"
                            app:layout_constraintStart_toEndOf="@+id/client_address_title"
                            app:layout_constraintTop_toTopOf="@+id/client_address_title" />
                    </androidx.constraintlayout.widget.ConstraintLayout>







                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="110dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/const_order_item_ifo" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/rv_order_items"
                app:layout_constraintBottom_toBottomOf="@+id/rv_order_items"
                app:layout_constraintEnd_toEndOf="@+id/rv_order_items"
                app:layout_constraintStart_toStartOf="@+id/rv_order_items"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>