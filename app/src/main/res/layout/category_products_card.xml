<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/products_card_category"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="15dp"
    android:elevation="8dp"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_product_all_properties"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/iv_product_category"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:focusable="true"
        android:src="@drawable/ic_launcher_foreground"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_properties_product"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_properties_product_first"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/tv_product_name_category_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:textSize="16sp"
                android:weightSum="1.5"
                android:paddingVertical="2.5dp"
                android:paddingStart="20dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_star_border_24"
                android:scaleType="fitCenter"
                android:gravity="end"
                android:weightSum="0.5"
                android:paddingVertical="2.5dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_properties_product_second"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/tv_product_price_category_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350.00 EGP"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:weightSum="1.5"
                android:paddingStart="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>