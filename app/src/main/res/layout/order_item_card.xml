<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/card_order_item"
    android:layout_marginTop="22dp"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <LinearLayout
        android:id="@+id/ll_order_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="16dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_order_item"
            android:src="@drawable/ic_launcher_foreground"/>

        <!-- Created At -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_order_created_at_row"
            android:orientation="vertical"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="16sp"
                android:padding="10dp"
                android:id="@+id/tv_product_name_value"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250.00 EGP"
                android:padding="6dp"
                android:textSize="20sp"
                android:id="@+id/tv_product_price_value"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:padding="6dp"
                android:textSize="20sp"
                android:id="@+id/tv_product_quantity_name"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:padding="6dp"
                    android:textSize="20sp"
                    android:id="@+id/tv_product_quantity_value"
                    />

        </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>